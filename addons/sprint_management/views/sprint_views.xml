<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sprint List View -->
    <record id="view_sprint_tree" model="ir.ui.view">
        <field name="name">project.sprint.tree</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <list string="Sprints">
                <field name="name"/>
                <field name="project_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
                <field name="task_count"/>
            </list>
        </field>
    </record>

    <!-- Sprint Form View -->
    <record id="view_sprint_form" model="ir.ui.view">
        <field name="name">project.sprint.form</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <form string="Sprint">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,done,cancelled" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="goal"/>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <div invisible="project_id" class="alert alert-info mb-3">
                                Select a project first to manage tasks.
                            </div>
                            <group string="Click to pick tasks" invisible="not project_id">
                                <field name="available_task_ids"
                                       widget="many2many_tags"
                                       domain="[('project_id', '=', project_id), ('sprint_id', '=', False)]"
                                       options="{'no_create': True}"/>
                            </group>
                            <field name="task_ids"
                                   invisible="not project_id"
                                   context="{'default_project_id': project_id}">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="project_id" readonly="1"/>
                                    <field name="user_ids" widget="many2many_tags"/>
                                    <field name="stage_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Sprint Kanban View -->
    <record id="view_sprint_kanban" model="ir.ui.view">
        <field name="name">project.sprint.kanban</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="project_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
                <field name="task_count"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card">
                            <div class="o_kanban_content">
                                <strong><field name="name"/></strong>
                                <div>Project: <field name="project_id"/></div>
                                <div><field name="start_date"/> - <field name="end_date"/></div>
                                <div>Tasks: <field name="task_count"/></div>
                                <div>Status: <field name="state"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sprint Action (Menu Entry) -->
    <record id="action_sprint" model="ir.actions.act_window">
        <field name="name">Sprints</field>
        <field name="res_model">project.sprint</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sprint
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_sprint"
              name="Sprints"
              parent="project.menu_main_pm"
              action="action_sprint"
              sequence="5"/>
</odoo>